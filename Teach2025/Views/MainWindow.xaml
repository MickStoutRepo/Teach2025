<Window x:Class="Teach2025.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Teach2025" 
        Height="900" 
        Width="900"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="15">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1">
                <GradientStop Color="#28AFB0" 
                              Offset="0.1"/>
                <GradientStop Color="#FFA5AB" 
                              Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

       <TextBlock Grid.Row="0" 
                   Grid.Column="1" 
                   Text="Teach2025" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="24" 
                   FontWeight="Bold" />

       <StackPanel Grid.Row="1" Grid.Column="0">
           <TextBlock>
               <LineBreak/>
               <LineBreak/>
               <LineBreak/>
           </TextBlock>
           <RadioButton Content="Openen" 
                        Height="50" 
                        Foreground="#34143e" 
                        FontSize="25"
                        Style="{StaticResource MenuButtonTheme}"
                        x:Name="MeldingenButton"/>
           <RadioButton Content="Overhoren" 
                        Height="50" 
                        Foreground="#34143e" 
                        FontSize="25"
                        Style="{StaticResource MenuButtonTheme}"
                        x:Name="WijzigingenButton"/>
       </StackPanel>
        <StackPanel Grid.Row="0" 
                    Grid.Column="1" 
                    HorizontalAlignment="Right">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="1" Content="-"
                            Style="{StaticResource SettingsButtonTheme}"
                            Width="30" 
                            Height="30"
                            FontWeight="Heavy"
                            FontSize="20"
                            BorderThickness="1"
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Margin="0,10,10,0"
                            Click="Minimaliseren_Click"
                            IsHitTestVisible="True"
                            Panel.ZIndex="1"
                            x:Name="MinimaliserenButton">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Grid.Column="2" Content="X"
                    Style="{StaticResource CloseButtonTheme}"
                    Width="30" 
                    BorderThickness="1"
                    Height="30"
                    FontWeight="Heavy"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,10,10,0"
                    Click="Afsluiten_Click"
                    IsHitTestVisible="True"
                    Panel.ZIndex="1">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                </Button>
                </Grid>
        </StackPanel>
       <Border BorderBrush="#34143e" 
               Background="Azure"
               Grid.Row="1" 
               Grid.Column="1"  
               BorderThickness="1" 
               Padding="20" 
               Margin="0,25,25,25" 
               CornerRadius="20">
          <Border.Effect>
               <DropShadowEffect Color="#333333" 
                                 BlurRadius="10" 
                                 ShadowDepth="5" 
                                 Opacity="0.5"/>
           </Border.Effect>
           <ContentControl x:Name="MainContent"/>
       </Border>
    </Grid>
    </Border>
</Window>